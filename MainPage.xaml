<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavegacionEntrePaginas.MainPage">

    <Grid>
        <!-- Imagen de fondo -->
        <Image 
        Source="soldado.jpg"
        Aspect="AspectFill"
        Opacity="0.8"/>

        <!-- Grid principal con dos filas -->
        <Grid RowDefinitions="*,Auto,Auto">

            <!-- Scroll con contenido -->
            <ScrollView>
                <VerticalStackLayout >





                </VerticalStackLayout>
            </ScrollView>

            <!-- Subtítulo fijo abajo -->
            <Grid BackgroundColor="Black" Grid.Row="1" Padding="8">
                <Label
                Text="Bienvenido a una nueva partida"
                FontSize="23"
                TextColor="DarkOrange"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            </Grid>

            <!-- Botones en la fila inferior -->
            <Grid
            Grid.Row="2" ColumnDefinitions="*,*"
            Margin="20" ColumnSpacing="50">

                <Button
                Text="Cargar Partida"
                Clicked="OnCargarPartidaClicked"
                BackgroundColor="DarkOrange"
                TextColor="Black"
                FontSize="18"
                CornerRadius="10"
                Grid.Column="0"/>

                <Button
                Text="Opciones"
                Clicked="OnOpcionesClicked"
                BackgroundColor="DarkOrange"
                TextColor="Black"
                FontSize="18"
                CornerRadius="10"
                Grid.Column="1"/>
            </Grid>
        </Grid>
    </Grid>

</ContentPage>
