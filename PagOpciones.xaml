<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavegacionEntrePaginas.PagOpciones">

    <Grid RowDefinitions="Auto,*">

        <Image Source="soldado3.jpg"
               Aspect="AspectFill"
               Grid.RowSpan="2"
               Opacity="1"/>

        <Grid BackgroundColor="Black" Padding="8" Row="0">
            <Label Text="INSTRUCCIONES DEL JUEGO"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">

                <Label Text="=== REGLAS DEL JUEGO ==="
                       FontSize="24"
                       TextColor="DarkOrange"
                       HorizontalOptions="Center" />

                <Label Text="- El objetivo es eliminar a los enemigos para ganar puntos.&#10;
- Sobrevive el mayor tiempo posible.&#10;
- Gana el jugador o equipo con más bajas al final de la partida.&#10;
- Evita el fuego amigo: daña a tus aliados."
                       FontSize="16"
                       TextColor="White"
                       LineBreakMode="WordWrap" />

                <Label Text="=== CONTROLES BÁSICOS ==="
                       FontSize="24"
                       TextColor="DarkOrange"
                       HorizontalOptions="Center" />

                <Label Text="- W / A / S / D → Moverse.&#10;
- Ratón → Apuntar.&#10;
- Clic izquierdo → Disparar.&#10;
- Clic derecho → Apuntar con la mira.&#10;
- R → Recargar.&#10;
- Espacio → Saltar.&#10;
- Ctrl → Agacharse.&#10;
- Shift → Correr."
                       FontSize="16"
                       TextColor="White"
                       LineBreakMode="WordWrap" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>